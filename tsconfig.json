{
    "extends": "./tsconfig.aliases.json",
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./",
        "baseUrl": "./src",
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}